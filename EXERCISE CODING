package class2;

import java.util.Scanner;

public class Exercise {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String subject1;
		String subject2;
		int marks1 ;
		int marks2;
		
		
		Scanner sc = new Scanner (System.in);
		
		 System.out.println("Enter the name of first subject");
		    subject1 = sc.nextLine();
		    
		 System.out.println("Enter the name of subject");
		    subject2 = sc.nextLine();
		 
		 System.out.println("Enter the mark of first subject");
		    marks1 = sc.nextInt(); 
		    
		 System.out.println("Enter the mark of second subject");
		    marks2 = sc.nextInt();  
		    
		    
		 if (marks1 > 50) {
			 System.out.println("The student was passed the first subject");
		 }
		 else {
			 System.out.println("The student was failed the first subject");
		 }
		 
		 
		 if (marks2 > 50) {
			 System.out.println("The student was passed the second subject");
		 }
		 else {
			 System.out.println("The student was failed the second subject");
		 }
		 
		 
		 
		 if ((marks1 > 50) && (marks2 > 50))
		 {
			 System.out.println("Student was passed 2 subject");}
		 
		 else if ((marks1 > 50) && ( marks2 <50)){
		 
			 System.out.println("Student was passed first subject only");
		 }
		 else if ((marks1 < 50) && ( marks2 > 50)){
			 System.out.println("Student was passed second subject only");
		 }
		 else if ((marks1 < 50) && ( marks2 < 50)) {
			 System.out.println("Student was failed all subject");
		 }
		 
		 
		 if (marks1 > marks2) {
	            System.out.println("s1 Lagi senang");
	        }
	        else {
	            System.out.println("s2 Lagi senang");
	        }
		 
		    
		 if (marks1 > marks2) {
			 System.out.println("The highest mark subject is:" + subject1 );
			 System.out.println("The lowest mark subject is:" + subject2 );
		 }
		 
		 else {
			 System.out.println("The highest mark subject is:" + subject2);
			 System.out.println("The lowest mark subject is:" + subject1 );
		 }
		 
		 double sum1 = ((marks1 + marks2)/2);
		 System.out.println("The average of marks is:" + sum1);
		 
		 if ((marks1 >= 80) && (marks1 <= 100)){
			 System.out.println("The first subject is gred A");
		 }
		 
		 else if ((marks1 >= 60) && (marks1 <= 79)){
			 System.out.println("The first subject is gred B"); 
		 }
		 
		 else if ((marks1 >= 50) && (marks1 <= 59)){
			 System.out.println("The first subject is gred C"); 
		 }
		 
		 else if (marks1 < 50){
			 System.out.println("The first subject is failed"); 
		 }
		 
		 
		 
		 if ((marks2 >= 80) && (marks2 <= 100)){
			 System.out.println("The second subject is gred A");
		 }
		 
		 else if ((marks2 >= 60) && (marks2 <= 79)){
			 System.out.println("The second subject is gred B"); 
		 }
		 
		 else if ((marks2 >= 50) && (marks2 <= 59)){
			 System.out.println("The second subject is gred C"); 
		 }
		 
		 else if (marks2 < 50){
			 System.out.println("The second subject is failed"); 
		 }
		 
		 
		

	}

}
